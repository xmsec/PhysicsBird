<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <EditText
        android:id="@+id/etnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tvshape"
        android:ems="10"
        android:gravity="center"
        android:hint="在此输入数据个数"
        android:maxLines="1"
        android:textSize="15sp" />

    <requestFocus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvdis"
        android:layout_alignRight="@+id/etnum"
        android:layout_below="@+id/etnum"
        android:layout_marginTop="14dp"
        android:background="@drawable/tvshape"
        android:ems="10"
        android:hint="键入一个数据,点Next继续"
        android:maxLines="6"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnnext"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etdata"
        android:layout_alignTop="@+id/etdata"
        android:layout_toRightOf="@+id/etdata"
        android:background="@drawable/btnsele"
        android:text="Next" />

    <TextView
        android:id="@+id/tvdis"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etdata"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="数据:"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnreset"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnenter"
        android:layout_alignBottom="@+id/btnenter"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/btnenter"
        android:background="@drawable/btnsele_cancel"
        android:text="重置" />

    <Button
        android:id="@+id/btnenter"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etnum"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/btnsele"
        android:enabled="false"
        android:text="计算" />

</RelativeLayout>
